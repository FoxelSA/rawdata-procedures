_UID=$UID
_GID=1000

SCRIPT=$(basename $0)

log() {
  echo $(date +%F_%r) $SCRIPT $BASHPID $@ >&2
}

# format stdin for logginG
logstdout() {
  while read l ; do
    echo $(date +%F_%R:%S) $SCRIPT $BASHPID $@ $l >&2
  done
}

DESTINATION=$1

[ -z "$DESTINATION" ] && exit 1

# download rawdata from camera modules
DEST=$(rawdata-download $DESTINATION)

EXIT_CODE=$?

# set permissions for directories
chown $_UID.$_GID $DEST $DEST/mov
chown -R $_UID.$_GID $DEST/mov
chmod 0777 $DEST/mov
chmod -R 0777 $DEST/mov

# Decompose destination
IFS='/' read -a DEST_DECOMPOSED <<< "$DEST"

# Extract master timestamp
MASTER_TS=${DEST_DECOMPOSED[${#DEST_DECOMPOSED} - 1]}

# Extract MAC address
MAC_ADDR=${DEST_DECOMPOSED[${#DEST_DECOMPOSED} - 3]}

# return mac address and first timestamp
echo $MAC_ADDR $MASTER_TS

if [ $EXIT_CODE -ne 0 ] ; then
 log ${LINENO} rawdata-download exit code $EXIT_CODE
 exit $EXIT_CODE
fi
