# Script execution switch #
SWITCH_DOWNLOAD=""
SWITCH_NOSPLIT=""
SWITCH_NOPREVIEW=""

# Script parameters #
PARAM_MOUNT="/data/"
PARAM_MAC=""
PARAM_MASTER=""
PARAM_SEGMENT=""

# Arguments and parameters parser #
arguments() {

    # Search in arguments #
    while [[ $# > 0 ]]; do

        args="$1"
        shift
        case $args in
            --download)
                SWITCH_DOWNLOAD="TRUE"
            ;;
            --no-split)
                SWITCH_NOSPLIT="TRUE"
            ;;
            --no-preview)
                SWITCH_NOPREVIEW="TRUE"
            ;;
            --mount-point)
                PARAM_MOUNT="$1"
                shift
            ;;
            --mac-address)
                PARAM_MAC="$1"
                shift
            ;;
            --master-timestamp)
                PARAM_MASTER="$1"
                shift
            ;;
            --segment-timestamp)
                PARAM_SEGMENT="$1"
                shift
            ;;
        esac

    done

}

# Argument and parameters #
arguments $@

# Check execution consitency #
if [ -n "$SWITCH_DOWNLOAD" ]; then

    # Check execution consitency #
    if [ -z "$PARAM_MAC" ] && [ -z "$PARAM_MASTER" ]; then

        # Run procedure #
        echo "rawdata-procedures : downloading raw data ..."
        echo "rawdata-???"

        # Run procedure #
        echo "rawdata-procedures : moving downloaded raw data ..."
        echo "rawdata-???"

        # Temporary #
        RETURN="AA:BB:CC:DD:EE:FF 123768762"

        # Extract returned value - MAC address and master timestamp #
        ARRAY=($RETURN)
        PARAM_MAC=${ARRAY[0]}
        PARAM_MASTER=${ARRAY[1]}

    else 

        # Exit script #
        echo "Error : unable to understand --download switch with --mac-address/--master-timestamp parameters"
        exit 1

    fi

fi

# Check execution consistency #
if [ -n "$PARAM_MAC" ] && [ -n "$PARAM_MASTER" ]; then

    # Run procedure #
    echo "rawdata-procedures : auto-segmentation ..."
    echo "rawdata-autoseg $PARAM_MOUNT $PARAM_MAC $PARAM_MASTER"

    # Run procedure #
    echo "rawdata-procedures : creating table of jp4 files ..."
    echo "rawdata-???"

    # Run procedure #
    echo "rawdata-procedures : hard-linking of mov files ..."
    echo "rawdata-???"

    # Check execution switch #
    if [ "$SWITCH_NOSPLIT" == "TRUE" ]; then exit 0; fi

    # Run procedure #
    echo "rawdata-procedures : splitting of mov files ..."
    echo "rawdata-???"

    # Check execution switch #
    if [ "$SWITCH_NOPREVIEW" == "TRUE" ]; then exit 0; fi

    # Run procedure #
    echo "rawdata-procedures : generating image previews ..."
    echo "rawdata-???"

else

    # Exit script #
    echo "Error : cannot continue execution without --mac-address/--master-timestamp parameters"
    exit 1

fi

